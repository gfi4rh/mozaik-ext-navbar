.navbar
  &__container
    display flex
    height 100%
    padding 0.4em

    & svg
      cursor pointer
  
  &__msg
    flex-grow 1
    background-color #535f66
    margin 0 2vmin
    border-radius 0.5em
    padding 0 0.5em
    border none
    outline none
    color #eedba5
    text-align center

  &__version
    background-color #27ae60
    margin 0 0.5em
    padding 0 0.5em
    border-radius 0.5em
    cursor pointer
  

.info
  &__container
    padding 1em 2em
    background-color #535c68
    border-radius 0.5em
    font-size 1.5em
    display inline-block
    top 50%
    left 50%
    transform translate(-50%, -50%)
