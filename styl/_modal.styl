.modal
  &__back
    position fixed
    top 0
    left 0
    width 100%
    height 100%
    background rgba(0, 0, 0, 0.6)

  &__main
    position fixed
    background white
    width 25%
    height auto
    top 50%
    left 50%
    transform translate(-50%,-50%)
    border-radius 0.3em

  &__block
    display block

  &__none
    display none
