.logger
  &__form
    display flex
    flex-direction column
    padding 1.5em

  &__label
    margin-top 0.5em
    font-size 1.5em

  &__input
    margin-bottom 0.5em
    border-radius 0.3em
    padding 0.3em

  &__button__container
    margin-top 1em
    display flex
    justify-content space-around

  &__button
    border-radius 0.3em
    border-style solid
    padding 0.3em